<div>
  <%=form_tag(books_path, method: :get) do %>
    <p>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search"%>
    </p>
  <% end %>

  <table>
    <thead>
      <tr>
        <th class="px-4">Title</th>
        <th class="px-4">Description</th>
        <th class="px-4">Author</th >
        <th class="px-4">Price</th> 
        <th class="px-4">Seller</th>
        <th colspan="3"> </th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td class="px-4"><%= book.title %></td>
          <td class="px-4"><%= book.description %></td>
          <td class="px-4"><%= book.author %></td>
          <td class="px-4"><%= book.price %></td>
          <td class="px-4"><%= book.user.name %></td>
          <td> <%= link_to "Add to cart", cart_books_path(book_id: book.id), method: :post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
