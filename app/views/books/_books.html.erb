  <table>
    <thead>
      <tr>
        <th class="px-4">Title</th>
        <th class="px-4">Description</th>
        <th class="px-4">Author</th >
        <th class="px-4">Price</th> 
        <th class="px-4">Seller</th>
        <th colspan="3"> </th>
      </tr>
    </thead>

    <tbody>
      <% books.each do |book| %>
        <tr id=<%="#{book.id}"%>>
          <td class="px-4"><%= book.title %></td>
          <td class="px-4"><%= book.description %></td>
          <td class="px-4"><%= book.author %></td>
          <td class="px-4"><%= number_to_currency(book.price) %></td>
          <td class="px-4"><%= book.user.name %></td>
          <td class="px-4"> <%= link_to "Add to cart", cart_books_path(book_id: book.id), method: :post, remote: true, class: "addToCart" %></td>
          <%if user_signed_in?%>
            <td class="px-4"> <%= link_to "Edit", edit_book_path(book) if current_user.id == book.user_id%></td>
            <td class="px-4"> <%= link_to "Delete", book, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == book.user_id%></td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>